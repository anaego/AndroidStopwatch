<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#426ef4">

    <TextView
            android:text="@string/_00_00_000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stopwatchTextView"
            android:textColor="@android:color/white" android:textStyle="bold" android:textSize="75sp"
            android:gravity="center"
            android:layout_marginTop="132dp" app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:background="@null" android:textColor="@android:color/white"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/stopwatchTextView"/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button2"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@null"
            android:textColor="@android:color/white" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/stopwatchTextView"/>
</android.support.constraint.ConstraintLayout>